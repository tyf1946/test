<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_news_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_news_content" >

    <RelativeLayout
        android:id="@+id/rl_news_content_user"
        android:layout_width="fill_parent"
        android:layout_height="30dip" >

        <ImageView
            android:id="@+id/iv_news_content_photo"
            android:layout_width="30dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dip"
            android:src="@drawable/photo" />

        <TextView
            android:id="@+id/tv_news_content_usesrname"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/iv_news_content_photo"
            android:text="谭小贤"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="15dip" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_news_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_news_content_user"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:lineSpacingExtra="5dip"
        android:text="前天晚上出门捡了个这个，想着带回家养，回来发现不会养，昨天跟儿子决定放生，带到一个人迹罕至的地方，一放下来就自己钻草丛里了，希望它过得好，不要被人再抓住了o(v)o"
        android:textColor="#333333"
        android:textSize="15dip" />

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_marginTop="10dip"
        android:layout_below="@id/tv_news_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip" >

        <RelativeLayout
            android:id="@+id/rl_news_item_zan"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:background="@drawable/list_item_btn_n" >

            <ImageView
                android:id="@+id/iv_news_items_zan"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/iv_news_items_zan" />

            <TextView
                android:id="@+id/tv_news_item_zan"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@id/iv_news_items_zan"
                android:gravity="center"
                android:text="1070  "
                android:textColor="#5E6971" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_news_item_share"
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/rl_news_item_zan"
            android:background="@drawable/list_item_btn_n" >

            <ImageView
                android:id="@+id/iv_news_items_buzan"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/iv_news_items_buzan" />

            <TextView
                android:id="@+id/tv_news_item_buzan"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@id/iv_news_items_buzan"
                android:gravity="center"
                android:text="10  "
                android:textColor="#5E6971" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="30dip"
            android:layout_height="50dip"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/rl_news_item_share"
            android:background="@drawable/list_item_btn_n" >

            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_centerInParent="true"
                android:background="@drawable/collect" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_alignParentRight="true"
            android:background="@drawable/list_item_btn_n" >

            <ImageView
                android:id="@+id/iv_news_item_commend"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/commend" />

            <TextView
                android:id="@+id/tv_news_item_topic"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@id/iv_news_item_commend"
                android:gravity="center"
                android:text="11  "
                android:textColor="#5E6971" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dip"
        android:layout_below="@id/rl_content"
        android:background="@android:color/transparent" />

</RelativeLayout>