<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_frame"
    android:layout_width="fill_parent"
    android:layout_height="70dip"
    android:background="#574B41" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:layout_marginTop="0dip" >

        <ImageView
            android:id="@+id/iv_menu_item_logo"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginLeft="10dip"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tv_menu_item"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/iv_menu_item_logo"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="20dip" />

        <ImageView
            android:id="@+id/iv_menu_item_news"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_marginTop="10dip"
            android:layout_toRightOf="@id/tv_menu_item"
            android:background="@drawable/forget_password" />

        <ImageView
            android:id="@+id/iv_menu_jiantou"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/forget_password" />
    </RelativeLayout>

</RelativeLayout>